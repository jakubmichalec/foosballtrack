.col-sm-12
  #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
    .carousel-inner{:role => "listbox"}
      .item.active
        .carousel-caption
        = image_tag 'pic1.jpg', class: "img-responsive center-block"
      .item
        .carousel-caption
        = image_tag 'pic2.jpg', class: "img-responsive center-block"
      .item
        .carousel-caption
        = image_tag 'pic3.jpg', class: "img-responsive center-block"
    %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic", :role => "button"}
      %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
      %span.sr-only Previous
    %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic", :role => "button"}
      %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
      %span.sr-only Next


.col-sm-12
  %table.table.table-striped.table-hover
    %tr
      %th Nickname
      %th Number of Matches
      %th Wins
      %th Loses
      %th Goals
      %th Lost Goals
      %th Rating

    - @players.each do |player|
      %tr
        %td= link_to player.nickname, player
        %td= player.number_of_matches
        %td= player.wins
        %td= player.lose
        %td= player.goals
        %td= player.lost_goals

